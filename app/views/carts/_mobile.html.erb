<ul class="cart-header order-mobile-<%= mobile.id %>">
  <div class="close1" onclick="remove_item(this)" id=<%= mobile.id %>> </div>
    <li class="ring-in">
      <%= link_to mobile_path(mobile) do %>
        <%= image_tag mobile.avatar, class: "img-responsive" %>
      <% end %>
    </li>
    <li><span class="name"><%= mobile.name %></span>
      <%= select_tag mobile.id, options_from_collection_for_select(mobile.colors, "id", "color", find_exits_item(@cart, mobile.id.to_s)["color_id"]), {class: "color color-#{mobile.id}"}%>
    </li>
    <li><span class="cost">
      <input id=<%= mobile.id %> class="quantity form-control order-quantity-<%= mobile.id %>" type="number" min="1" style="width: 150px" value="<%= find_exits_item(@cart, mobile.id.to_s)["quantity"] %>"></span>
    </li>
    <li><span class="cost price"><%= mobile.price %>&nbsp<%= Settings.currency.vnd %></span></li>
  <div class="clearfix"> </div>
</ul>
