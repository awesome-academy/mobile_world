  <div class="container">
    <div class="footer-top">
      <div class="col-md-6 footer-left">

      <select class="dropdown drop locale">
        <option value="" class="label"><%= t "layouts.header.#{cookies["locale"].to_s}" %></option>
        <option value="en">
          <%= t "layouts.header.en" %>
        </option>
        <option value="vi">
          <%= t "layouts.header.vi"%>
        </option>
      </select>
      </div>
