<div class="breadcrumbs">
  <div class="container">
    <div class="breadcrumbs-main">
      <ol class="breadcrumb">
        <li><%= link_to t("views.carts.index.home"), root_path %></li>
        <li class="active"><%= t "views.carts.index.item" %></li>
      </ol>
    </div>
  </div>
</div>
<!--end-breadcrumbs-->
<!--start-single-->
<div class="single contact">
  <div class="container">
    <div class="single-main header-mobile-info">
      <div class="col-md-9 single-main-left">
        <div class="sngl-top">
          <div class="col-md-5 single-top-left">
            <div class="flexslider">
                <ul class="slides">
                  <%= render partial: "slide", collection: @mobile.images %>
                </ul>
            </div>
            <!-- FlexSlider -->
          </div>
          <div class="col-md-7 single-top-right">
            <div class="single-para simpleCart_shelfItem">
            <h2><%= @mobile.name %></h2>
            <div class="star-on">
              <ul class="star-footer">
                <li><a href="#"><i> </i></a></li>
                <li><a href="#"><i> </i></a></li>
                <li><a href="#"><i> </i></a></li>
                <li><a href="#"><i> </i></a></li>
                <li><a href="#"><i> </i></a></li>
              </ul>
              <div class="review">
                <a href="#"> 1 customer review </a>
              </div>
              <div class="clearfix"></div>
            </div>

            <% if @mobile.percent_sale_off %>
              <span class="item_price price">
                <span class="sale-label"><%= t "views.mobiles.show.older_price" %></span>
                <span class="older-price sale">
                  <%= number_with_delimiter @mobile.older_price, delimiter: "," %>
                </span>&nbspVND
              </span>
              <span class="sale sale-percent">&nbsp&nbsp<%= @mobile.percent_sale_off %></span>
              <br></br>
            <% end %>
            <span class="item_price price">
              <span class="sale-label"><%= t("views.mobiles.show.newer_price") if @mobile.percent_sale_off %></span>
              <span id="mobile-price-<%= @mobile.id %>" class="sale">
                <%= number_with_delimiter @mobile.price, delimiter: "," %>
              </span>VND
            </span>
            <% if @mobile.percent_sale_off %>
              <p>
                <b><%= t "views.mobiles.show.remaining" %></b>
                <span class="sale" id="message-sale-off-product"></span>
              </p>
            <% end %>
            <br></br><hr></hr>
            <p><%= @mobile.description %></p>
            <div class="available">
              <ul>
                <li><label><%= t "views.carts.index.color" %></label>
                  <%= select_tag "show-color", options_from_collection_for_select(@mobile.colors, "id", "color", "0"), {class: "form-control"} %>
                </li>
                <div class="clearfix"> </div>
              </ul>
            </div>
              <label><%= t "views.mobiles.show.quantity" %></label>
              <input id=<%= @mobile.id %> class="order-quantity-<%= @mobile.id %> form-control" type="number" min="1" style="width: 150px" value="1">
              <a class="add-cart item_add"  id="<%= @mobile.id %>" onclick= "add_to_cart(this)"><%= t "views.mobiles.show.add_to_cart" %></a>
            </div>
          </div>
          <div class="clearfix"> </div>
        </div>
      </div>
      <div class="col-md-3 single-right">
        <div class="w_sidebar">
          <section  class="sky-form">
            <h4><%= t"views.mobiles.show.check_exit_mobile" %></h4>
              <div class="col col-4">
                <%= form_for @shop, remote: true do |f| %>
                  <%= f.hidden_field :mobile_id, value: @mobile.id %>
                  <%= f.label t("views.mobiles.show.city") %><br/>
                  <%= f.collection_select :city_id, City.order(:name), :id, :name, {include_blank: true},{class: "form-control"} %><br/>
                  <%= f.label t("views.mobiles.show.district")  %><br/>
                  <%= f.grouped_collection_select :district_id, City.order(:name), :districts, :name, :id, :name, {include_blank: true}, {class: "form-control"} %><br/>
                  <%= f.submit t("views.mobiles.show.check"), class: "btn btn-primary form-control" %>
                <% end %>
              </div>
              <ul class="col col-4 show-check-mobile"></ul>
          </section>
        </div>
      </div>
      <div class="clearfix"> </div>
    </div>
    <div class="single-main">
      <div class="col-md-9 single-main-left">
        <div class="tabs">
        <%= raw @mobile.review %>
        <div class="comment-session">
          <h1><%= t "views.mobiles.show.comment" %></h1>
          <%= render "comment_form" %>
          <div class="comment-content">
            <div class= "comment">
              <%= comments_tree_for(@comments) %>
            </div>
            <p class="pagination">
              <%= link_to_next_page(@comments, t("views.mobiles.show.more_comment"), :remote => true) %>
            </p>
          </div>
        </div>
      </div>
      </div>
      <div class="col-md-3 single-right specifications">
        <div id="tabs">
          <h3><%= t "views.mobiles.show.specifications" %></h3>
          <table class="table">
            <tr>
              <td><%= t "views.mobiles.show.resolution" %></td>
              <td><%= @mobile.resolution %>&nbspPixels</td>
            </tr>
            <tr>
              <td><%= t "views.mobiles.show.size" %></td>
              <td><%= t "views.mobiles.show.height" %>:&nbsp<%= @mobile.height %>mm -
              <%= t "views.mobiles.show.weight" %>:&nbsp<%= @mobile.width %>mm</td>
            </tr>
            <tr>
              <td><%= t "views.mobiles.show.front_camera" %></td>
              <td><%= @mobile.front_camera %>&nbspMP</td>
            </tr>
            <tr>
              <td><%= t "views.mobiles.show.behind_camera" %></td>
              <td><%= @mobile.behind_camera %>&nbspMP</td>
            </tr>
            <tr>
              <td><%= t "views.mobiles.show.ram" %></td>
              <td><%= @mobile.ram %></td>
            </tr>
            <tr>
              <td><%= t "views.mobiles.show.battery" %></td>
              <td><%= @mobile.battery %>&nbspmAh</td>
            </tr>
          </table>
        </div>
        <h3 class="text-center"><%= t "views.mobiles.show.recommend" %></h3>
        <% @recommends.each do |recommend| %>
          <div class="product-one">
            <div class="product-main simpleCart_shelfItem">
              <%= link_to mobile_path(recommend), class: "mark" do %>
                <%= image_tag recommend.avatar, class: "img-responsive zoom-img" %>
              <% end %>
              <div class="product-bottom">
                <h3 class= "mobile-name-<%= recommend.id %>"><%= recommend.name %></h3>
                <p><%= t "views.shared.explore_now" %></p>
                  <span class=" item_price">
                    <span id= "mobile-price-<%= recommend.id %>" value=<%= recommend.price %>><%=  number_with_delimiter recommend.price, delimiter: "," %>&nbspVND</span>
                  </span>
                </h4>
              </div>
            </div>
            <div class="clearfix"></div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>

<div class="form-group well" id="form_nested_comment" >
  <%= form_for @comment, remote: true do |f| %>
    <%= f.hidden_field :mobile_id, value: params[:id] %>
    <%= f.hidden_field :parent_id %>
    <%= f.text_area :content, class: "form-control", placeholder: t("views.mobiles.show.comment_here") %><br/>
    <div class="submit-comment">
      <%= f.submit t("views.mobiles.show.submit"), class: "btn btn-primary submit-comment-form" %>
    </div>
  <% end %>
</div>
