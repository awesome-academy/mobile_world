<!--start-breadcrumbs-->
<div class="breadcrumbs">
  <div class="container">
    <div class="breadcrumbs-main">
      <ol class="breadcrumb">
        <li><%= link_to t("views.header.home"), root_path %></li>
        <li class="active"><%= t('views.search.search') %></li>
      </ol>
    </div>
  </div>
</div>
<!--end-breadcrumbs-->

<div class="product">
  <div class="container">
    <h4><%= t "views.search.amount", amount: @amount %></h4>
    <%= paginate(@mobiles, remote: true) if @mobiles.present? %>
    <div class="product-top">
      <div class="product-one">
        <% if @mobiles.present? %>
          <%= render partial: "shared/mobile", collection: @mobiles %>
        <% end %>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>
